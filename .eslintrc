{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "linebreak-style": ["error", "windows"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-return-assign": ["error", "except-parens"],
        "no-unused-expressions": ["error", "allowTernary "]
    },
    "extends": "airbnb-base/legacy"
}
